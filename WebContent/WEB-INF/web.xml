     <filter>
           <filter-name>encodingFilter</filter-name>
          <filter-class>encoding.filter.CharsetEncodingFilter</filter-class>            
           <init-param>
                <param-name>encoding</param-name>
                <param-value>utf-8</param-value>
           </init-param>
     </filter>
     <filter-mapping>
           <filter-name>encodingFilter</filter-name>
           <url-pattern>/*</url-pattern>
     </filter-mapping>





</web-app>